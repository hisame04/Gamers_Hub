<%#ヘッダーのタブの表示%>
<% content_for :header do %>
  <header class="top-header">
    <%= link_to "相手募集", root_path(tab: 'opponent'), 
        class: "header-tab #{@active_tab == 'opponent' ? 'active' : ''}" %>

    <%= link_to "フレンド募集", root_path(tab: 'friend'), 
        class: "header-tab #{@active_tab == 'friend' ? 'active' : ''}" %>
  </header>
<% end %>

<%#検索ボタンの表示%>
<div style="display: flex; justify-content: left; gap: 15px; margin-top: 20px;">
  <% if @active_tab == 'friend' %>
    <%= button_to "🔍検索", search_friend_wanted_posts_path, 
        method: :get, 
        class: "btn back",
        style: "background: #7dd3fc; color: #000000; border: none; cursor: pointer; padding: 12px 30px; font-size: 1.1em; border-radius: 8px;"
    %>
  <% else %>
    <%= button_to "🔍検索", search_opponents_wanted_posts_path, 
        method: :get, 
        class: "btn back",
        style: "background: #7dd3fc; color: #000000; border: none; cursor: pointer; padding: 12px 30px; font-size: 1.1em; border-radius: 8px;"
    %>
  <% end %>
</div>

<%#投稿の表示%>
<div class="timelines">
  <%= render @timeline_items %>
</div>

<%#投稿作成ボタン%>
<% if @active_tab == 'friend' %>
  <%= link_to new_friend_wanted_post_path, class: "floating-btn" do %>
    <span style="font-size: 1.2em; margin-right: 5px;">＋</span> 募集する
  <% end %>
<% else %>
  <%= link_to new_opponents_wanted_post_path, class: "floating-btn" do %>
    <span style="font-size: 1.2em; margin-right: 5px;">＋</span> 募集する
  <% end %>
<% end %>

