<div class = "title", style="display: flex; flex-direction: column; align-items:center; gap:  20px">
  <h1>Welcome!</h1>
  <div class ="title_logo">
  <%= image_tag "logo.png", alt: "Gamers Hub", style:"width: 300px; height: auto; display: flex;  justify-content: center;" %>
  </div>

  <% if user_signed_in? %>
    <p>You are <%= current_user.email %></p>
    <%= button_to "Logout", destroy_user_session_path, 
      method: :delete, 
      class: "btn post-edit",
      style: "background-color: #7dd3fc; color: #000000; border: none; cursor: pointer; padding: 12px 30px; font-size: 1.1em; border-radius: 8px;" 
    %>
  <% else %>
    <%= button_to "Login", new_user_session_path, 
      method: :get, 
      class: "btn post-edit",
      style: "background-color: #7dd3fc; color: #000000; border: none; cursor: pointer; padding: 12px 30px; font-size: 1.1em; border-radius: 8px;" 
    %>
  <% end %>

</div>



