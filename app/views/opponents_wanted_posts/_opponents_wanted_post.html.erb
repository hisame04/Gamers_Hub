        <% elsif opponents_wanted_post.voice_chat == 2%>
          уБйуБбуВЙуБзуВВ
        <% end%>
      </div>

    </div>

    <div class="gh-description-area">
      <div class="gh-description-divider"></div>
      <p class="gh-description-text">
        <span class="gh-icon">ЁЯТн</span>
        <%= opponents_wanted_post.description %>
      </p>
    </div>

    <%#ф╜ЬцИРцЩВхИ╗уБошбичд║%>
    <div class="gh-created-at">
      <% if opponents_wanted_post.created_at > 24.hours.ago %>
        <%= time_ago_in_words(opponents_wanted_post.created_at) %> ago
      <% else %>
        <%= opponents_wanted_post.created_at.strftime("%Y/%m/%d %H:%M") %>
      <% end %>
    </div>

  </div>

  <%#шй│ч┤░уГЪуГ╝уВ╕уБ╕уБоуГкуГ│уВп%>
  <% unless action_name == "show" %>
    <%= link_to "шй│ч┤░уВТшжЛуВЛ", opponents_wanted_post, class: "gh-card-footer-btn" %>
  <% end %>

</div>