      <% unless opponents_wanted_post.status %>
        <span class="gh-remaining-count">уБВуБи<%= opponents_wanted_post.current_need_num%>ф║║</span>
      <% end %>
    </div>

    <div class="gh-info-list">
      <%#цЧеф╗ШуБошбичд║%>
      <div class="gh-info-row">
        <span class="gh-icon">ЁЯЧУя╕П</span>
        <%= opponents_wanted_post.start_time.strftime("%mцЬИ%dцЧе %H:%M~") %>
      </div>

      <%#уГнуГ╝уГлуБошбичд║%>
      <div class="gh-info-row">
        <span class="gh-icon">ЁЯСе</span>
        <% if opponents_wanted_post.game_roles.any? %>
          <%= opponents_wanted_post.game_roles.map(&:name).join("/") %>
        <% else %>
