    <div class="gh-tags-area">
      <% title_name = opponents_wanted_post.game_title.name %>
      
      <span class="gh-tag-game" style="background-color: <%= game_color(title_name) %>; color: <%= game_text_color(title_name) %>;">
        <%= title_name %>
      </span>

      <%#хЛЯщЫЖф╕нуБЛуБйуБЖуБЛуБошбичд║%>
