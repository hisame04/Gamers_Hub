<div id="<%= dom_id opponents_wanted_post %>" class="gh-card">
  
  <div class="gh-card-header">
    <%#уГжуГ╝уВ╢уБоуВвуВдуВ│уГ│уБошбичд║%>
    <div class="gh-user-icon">
      <%= link_to user_path(opponents_wanted_post.user) do %>
        <% if opponents_wanted_post.user.photo.attached? %>
          <%= image_tag opponents_wanted_post.user.photo, class: "user-img" %>
        <% else %>
          <%= image_tag "icon_temporary.png", class: "user-img" %>
        <% end %>
      <% end %>
    </div>
    <%#уГжуГ╝уВ╢хРНуБошбичд║%>
    <div class="gh-user-name">
