        <% end %>
      </div>

      <%#уГвуГ╝уГЙуБошбичд║%>
      <div class="gh-info-row">
        <span class="gh-icon">ЁЯОо</span>
        <%= opponents_wanted_post.game_mode.name %>
      </div>

      <%#уГЬуВдуВ╣уГБуГгуГГуГИуБоцЬЙчДбуБошбичд║%>
      <div class="gh-info-row">
        <span class="gh-icon">ЁЯОЩя╕П</span>
        <% if opponents_wanted_post.voice_chat == 0%>
          уБВуВК
        <% elsif opponents_wanted_post.voice_chat == 1%>
